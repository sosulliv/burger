<!-- Page Container -->
<div class="container">

	<br>

	<!-- Burger Image -->
	<center>
		<div class="row">
			<img src="/assets/img/burger.svg">
		</div>
	</center>

	<!-- Page Title -->
	<center>
		<h1 class="red_font">Eat da Burger!</h1>
	</center>

	<br>


	<div class="row">
		<center>
			<!-- Left side (ready to eat) -->
			<div class="col-md-6">
				<h4 class="red_font">Ready to eat!</h4>
				<div id="ready_to_eat">

					<!-- Dynamically Insert Ready Burgers Here -->

				</div>
			</div>

			<!-- Right side (already eaten) -->
			<div class="col-md-6">
				<h4 class="red_font">Already eaten!</h4>
				<div id="already_eaten">

					<!-- Dynamically Insert Eaten Burgers Here -->


				</div>
			</div>
		</center>
	</div>


	<br>
	<br>

	<!-- Input New Burgers Form -->
	<form action="" method="POST">

		<!-- Text Area Input -->
		<div class="row">
			<!-- Empty Div to help center textarea -->
			<div class="col-md-3"></div>

			<!-- Burger Input Box -->
			<div class="form-group col-md-6">
				<center>
					<label for="new_burger" class="red_font">Request a new burger and place your order!</label>
				</center>
				<textarea class="form-control" columns="8" rows="4" id="new_burger" name="burger_name"></textarea>
			</div>

			<!-- Empty Div to help center textarea -->
			<div class="col-md-3"></div>
		</div>

		<!-- Submit Button -->
		<center>
			<button id="submit-button" type="submit" class="btn btn-danger">Place Order</button>
		</center>

	</form>

	<br>

</div>
